<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sesame.jizo.alert.db_conf" class="Sesame\Bundle\JizoAlert\Doctrine\DatabaseConfiguration" public="true">
            <argument type="string">%sesame_jizo_alert.db.driver%</argument>
            <argument type="string">%sesame_jizo_alert.db.host%</argument>
            <argument type="string">%sesame_jizo_alert.db.port%</argument>
            <argument type="string">%sesame_jizo_alert.db.user%</argument>
            <argument type="string">%sesame_jizo_alert.db.password%</argument>
            <argument type="string">%sesame_jizo_alert.db.name%</argument>
            <argument type="string">%sesame_jizo_alert.db.charset%</argument>
            <argument type="string">%sesame_jizo_alert.db.is_dev_mode%</argument>
        </service>

        <service id="sesame.jizo.alert" class="Sesame\Bundle\JizoAlert\Alert" public="true">
            <argument type="service" id="sesame.jizo.alert.db_conf" />
        </service>

        <service id="Sesame\Bundle\JizoAlert\AlertInterface" alias="sesame.jizo.alert" public="true" />

        <service id="sesame.jizo.alert.commmand.controller" class="Sesame\Bundle\JizoAlert\Command\AlertCommand" public="true">
            <tag name="console.command" command="jizo:alert-controller" />
        </service>
    </services>
</container>